
<h1>Bottle Service</h1>

<%= button_to "Sign In", new_member_session_path,:method => "get" %>
<%= button_to "Sign Up", new_member_registration_path,:method => "get" %>
<% @products.each do |product| %>
<p>
  <strong>Title:</strong>
  <%= product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag product.image_url %>
</p>

<p>
  <strong>Info url:</strong>
  <%= link_to product.info_url %>
</p>

<p>
  <strong>Price:</strong>
  $<%= product.price %>
</p>

<% end %>
<%= button_to "Checkout", orders_path, :method => "get" %>
