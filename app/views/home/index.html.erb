
<h1>Bottle Service</h1>

<% if member_signed_in? %>

  <div>Signed in as: <%= current_member.email %></div>
  <%= button_to "Not you?", destroy_member_session_path,:method => "delete" %>
  <%= button_to "Logout", destroy_member_session_path,:method => "delete" %>
  <% else %>
  <%= button_to "Sign In", new_member_session_path,:method => "get" %>
  <%= button_to "Sign Up", new_member_registration_path,:method => "get" %>
<% end %>

<% @products.each_with_index do |product,index| %>
<p>
  <strong>Title:</strong>
  <%= product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag product.image_url %>
</p>

<p>
  <strong>Info url:</strong>
  <%= link_to product.info_url %>
</p>

<p>
  <strong>Price:</strong>
  $<%= product.price %>
</p>

<%= text_field "#{product.title}", :method => "post" %>

<% end %>

<%= button_to "Checkout", order_path(:id) , :method => "post" %>
